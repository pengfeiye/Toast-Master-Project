<div class="form">
  <%= form_with scope: :news, url: create_news_path, class: "form-horizontal" do |form| %>
  <div class="form-group">
  		<%= form.label :title, "Title:" %>
  		<%= form.text_field(:title, class: 'form-control') %>
  </div>
  <div class="form-group">
  		<%= form.label :details, "Invite Users:" %>
  		<%= form.text_area(:details, class: 'form-control') %>
  </div>
  <div class="form-group">
  		<%= form.submit('Submit', class: 'btn-sm btn-primary') %>
  </div>
  <% end %>
</div>
